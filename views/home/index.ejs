<div>

<label>Name:</label>
<input type="text" ng-model="tacos" placeholder="Name goes here">
<hr>
<h2>Hello {{tacos}}!</h2>

</div>

<div ng-controller="listCtrl">
    <span>{{remaining()}} of {{todos.length}} remaining</span>
      [ <a href="" ng-click="archive()">archive</a> ]
      <ul class="unstyled">
        <li ng-repeat="todo in todos">
          <input type="checkbox" ng-model="todo.done">
          <span class="done-{{todo.done}}">{{todo.text}}</span>
        </li>
      </ul>
      <form ng-submit="addTodo()">

    <div class="input-append">
        <input ng-model="todoText" placeholder="new todo" class="span2" id="appendedInputButton" type="text">
        <button class="btn" type="submit" value="add">Add Task</button>
    </div>

       
      </form>
</div>

